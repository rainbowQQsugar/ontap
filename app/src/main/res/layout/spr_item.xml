<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spr_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:id="@+id/spr_item_work_date"
        style="@style/Text.H7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/sab_gray"
        tools:text="10/10/2017"/>

    <TextView
        android:id="@+id/spr_item_name"
        style="@style/Text.H7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textAllCaps="true"
        android:textColor="@color/sab_gray"
        tools:text="Esteban Garcia Rasso"/>

    <TextView
        android:id="@+id/spr_item_working_hour"
        style="@style/Text.H5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ellipsize="end"
        android:maxLines="4"
        android:textColor="@color/sab_dark_gray"
        tools:text="spr_item_working_hour"/>

    <TextView
        android:id="@+id/spr_item_contact_phone"
        style="@style/Text.H5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ellipsize="end"
        android:maxLines="4"
        android:textColor="@color/sab_dark_gray"
        tools:text="spr_item_contact_phone"/>

    <TextView
        android:id="@+id/spr_item_temporary_promo"
        style="@style/Text.H5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ellipsize="end"
        android:maxLines="4"
        android:textColor="@color/sab_dark_gray"
        tools:text="spr_item_contact_phone"/>

</LinearLayout>