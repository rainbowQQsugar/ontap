<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                style="@style/Text.H7.CondensedBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/page_inset_horizontal"
                android:layout_marginRight="@dimen/page_inset_horizontal"
                android:layout_marginTop="@dimen/page_inset_vertical_large"
                android:text="@string/order_source_filter" />

            <Spinner
                android:id="@+id/order_source"
                style="@style/spinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/page_inset_horizontal"
                android:layout_marginRight="@dimen/page_inset_horizontal"
                android:layout_marginTop="@dimen/form_label_margin" />

            <TextView
                style="@style/Text.H7.CondensedBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/page_inset_horizontal"
                android:layout_marginRight="@dimen/page_inset_horizontal"
                android:layout_marginTop="@dimen/form_margin_vertical"
                android:text="@string/order_status" />

            <Spinner
                android:id="@+id/order_statuses"
                style="@style/spinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/page_inset_horizontal"
                android:layout_marginRight="@dimen/page_inset_horizontal"
                android:layout_marginTop="@dimen/form_label_margin" />

            <TextView
                style="@style/Text.H7.CondensedBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/page_inset_horizontal"
                android:layout_marginRight="@dimen/page_inset_horizontal"
                android:layout_marginTop="@dimen/form_margin_vertical"
                android:text="@string/brand" />


            <AutoCompleteTextView
                android:id="@+id/order_brand"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/page_inset_horizontal"
                android:layout_marginRight="@dimen/page_inset_horizontal"
                android:layout_marginTop="@dimen/form_label_margin"
                android:imeOptions="actionNext"
                android:hint="@string/select_brand"
                android:textSize="@dimen/text_h7"
                android:inputType="text|textNoSuggestions"
                android:maxLines="1"></AutoCompleteTextView>

            <TextView
                style="@style/Text.H7.CondensedBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/page_inset_horizontal"
                android:layout_marginRight="@dimen/page_inset_horizontal"
                android:layout_marginTop="@dimen/form_margin_vertical"
                android:text="@string/sku_label" />


            <AutoCompleteTextView
                android:id="@+id/order_sku"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/page_inset_horizontal"
                android:layout_marginRight="@dimen/page_inset_horizontal"
                android:layout_marginTop="@dimen/form_label_margin"
                android:imeOptions="actionNext"
                android:hint="@string/select_sku"
                android:textSize="@dimen/text_h7"
                android:inputType="text|textNoSuggestions"
                android:maxLines="1"></AutoCompleteTextView>

            <TextView
                style="@style/Text.H7.CondensedBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/page_inset_horizontal"
                android:layout_marginRight="@dimen/page_inset_horizontal"
                android:layout_marginTop="@dimen/form_margin_vertical"
                android:text="@string/time_range" />

            <com.abinbev.dsa.ui.view.OrderDateHeaderView
                android:id="@+id/header_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.abinbev.dsa.ui.view.OrderDateHeaderView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/page_inset_horizontal"
                android:layout_marginRight="@dimen/page_inset_horizontal"
                android:layout_marginTop="@dimen/form_margin_vertical"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/page_inset_vertical_small">

                <TextView
                    android:id="@+id/cancel"
                    style="@style/Text.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space2"
                    android:text="@string/cancelar" />

                <TextView
                    android:id="@+id/apply"
                    style="@style/Text.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space2"
                    android:text="@string/apply" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>
