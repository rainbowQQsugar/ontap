<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/file_preview_size"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="@dimen/field_margin_35dp"
            android:layout_height="@dimen/field_margin_35dp"
            android:layout_marginLeft="@dimen/field_margin_half" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/field_margin_half"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:singleLine="true"
                android:id="@+id/file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文档"
                android:textColor="@color/abi_black"
                android:textSize="@dimen/text_h4" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已下载"
                android:textColor="@color/sab_light_gray"
                android:textSize="@dimen/text_h5"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/go_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/field_margin_half"
            android:background="@drawable/go_next"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/field_margin_50dp"
        android:layout_marginRight="@dimen/field_margin_half"
        android:background="@color/sab_light_gray" />

</LinearLayout>