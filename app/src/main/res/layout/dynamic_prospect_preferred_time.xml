<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space1"
    android:paddingTop="@dimen/space1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/preferred_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_access_time_primary_36dp"/>

        <TextView
            android:id="@+id/preferred_time_label"
            style="@style/Text.AccountListNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dia_de_atencion"/>
    </LinearLayout>

    <TextView
        android:id="@+id/preferred_time_value"
        style="@style/Text.PreferenceSubtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>