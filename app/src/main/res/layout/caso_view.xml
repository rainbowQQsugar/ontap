<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/case_name"
            style="@style/Text.H4"
            android:layout_width="0dp"
            android:paddingStart="14dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="28dp"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            tools:text="Case Name \n Other Name"/>

        <TextView
            android:id="@+id/case_count"
            style="@style/Text.H1.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="28sp"
            android:paddingEnd="14dp"
            tools:text="15"/>

        <ImageView
            android:id="@+id/caso_checkout_indicator"
            android:layout_width="@dimen/space1"
            android:layout_height="@dimen/space1"
            android:layout_gravity="top"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            tools:src="@drawable/ic_done_black"/>

    </LinearLayout>
</merge>