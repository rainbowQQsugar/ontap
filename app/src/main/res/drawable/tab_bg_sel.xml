<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="true">
        <shape>
            <corners android:topLeftRadius="@dimen/space_small"
                android:topRightRadius="@dimen/space_small"/>
            <solid android:color="@color/sab_white"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:topLeftRadius="@dimen/space_small"
                android:topRightRadius="@dimen/space_small"/>
            <solid android:color="@color/sab_lighter_gray"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:topLeftRadius="@dimen/space_small"
                android:topRightRadius="@dimen/space_small"/>
            <solid android:color="@color/sab_lighter_gray"/>
        </shape>
    </item>

</selector>