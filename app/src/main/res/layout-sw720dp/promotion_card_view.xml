<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="11dp"
    android:paddingLeft="@dimen/page_inset_horizontal"
    android:paddingRight="@dimen/page_inset_horizontal"
    android:paddingTop="11dp">

    <TextView
        android:id="@+id/promotionNumberValue"
        style="@style/Text.H5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:paddingRight="8dp"
        android:textColor="@color/abi_blue"
        tools:text="B-000001"/>

    <TextView
        android:id="@+id/promotionTypeValue"
        style="@style/Text.H5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:paddingRight="8dp"
        android:minLines="2"
        android:textColor="@color/sab_dark_gray"
        tools:text="Abierto"/>

    <TextView
        android:id="@+id/promotionDescriptionValue"
        style="@style/Text.H5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:paddingRight="8dp"
        android:textColor="@color/sab_dark_gray"
        tools:text="12/13/2012"/>

    <TextView
        android:id="@+id/promotionStartDateValue"
        style="@style/Text.H5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:textColor="@color/sab_dark_gray"
        tools:text="01/02/2002"/>

    <TextView
        android:id="@+id/promotionEndDateValue"
        style="@style/Text.H5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:textColor="@color/sab_dark_gray"
        tools:text="01/02/2002"/>

    <TextView
        android:id="@+id/promotionObligatoryValue"
        style="@style/Text.H5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:textColor="@color/status_no"
        tools:text="No"/>
</LinearLayout>
