<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlHighlight">@color/color_control_highlight</item>
        <item name="colorButtonNormal">@color/white</item>

        <item name="android:textColorPrimary">@color/sab_black</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorPrimaryDark</item>
        <item name="android:listDivider">@drawable/divider_list</item>
        <item name="spinnerStyle">@style/spinnerStyle</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="borderlessButtonStyle">@style/Widget.Button.Borderless</item>
        <item name="editTextStyle">@style/Widget.EditText</item>
        <item name="android:checkboxStyle">@style/Widget.CheckBox</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/Text.White</item>
    </style>

    <style name="PopupMenu" parent="Base.Widget.AppCompat.PopupMenu">
        <item name="android:listSelector">@color/sab_blue</item>
    </style>

    <style name="AppTheme.ToolbarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/sab_white</item>
        <item name="android:textColorPrimary">@color/sab_white</item>
        <item name="colorControlHighlight">@color/sab_blue</item>
    </style>

    <style name="AppTheme.ToolbarOverlay.Light" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/sab_gray</item>
        <item name="android:textColorPrimary">@color/sab_gray</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarStyle.Light" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/toolbar_bg</item>
    </style>

    <style name="DetailsToolbarStyle" parent="@style/ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme.ToolbarOverlay</item>
        <item name="titleTextAppearance">@style/Text.Title</item>
        <item name="subtitleTextAppearance">@style/Text.SubTitle</item>
    </style>

    <style name="FloatingActivityTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.AppBarOverlay.Light" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/sab_white</item>
    </style>

    <style name="CardViewTile" parent="@style/CardView.Light">
        <item name="contentPaddingTop">14dp</item>
        <item name="contentPaddingBottom">14dp</item>
        <item name="contentPaddingLeft">18dp</item>
        <item name="contentPaddingRight">18dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">@color/sab_white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="CasoView" parent="@style/CardViewTile">
        <item name="contentPaddingTop">4dp</item>
        <item name="contentPaddingBottom">4dp</item>
        <item name="contentPaddingLeft">2dp</item>
        <item name="contentPaddingRight">2dp</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Text.White" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@drawable/popup_menu_text</item>
    </style>

    <style name="Text.Title">
        <item name="android:textColor">@color/sab_white</item>
        <item name="android:textSize">@dimen/text_h7</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.SubTitle">
        <item name="android:textColor">@color/sab_white</item>
        <item name="android:textSize">@dimen/text_h4</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Action">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@drawable/action_text_selector</item>
        <item name="android:textSize">@dimen/text_h3</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- FONT STYLES-->
    <style name="Text.H1">
        <item name="android:textSize">@dimen/text_h1</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/sab_black</item>
    </style>

    <style name="Text.H1.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.H1.BoldThin">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.H1.BoldCondensed">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.H1.Condensed">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Text.H1.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.H2">
        <item name="android:textSize">@dimen/text_h2</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sab_black</item>
    </style>

    <style name="Text.H2.Bold">
        <item name="android:textSize">@dimen/text_h2</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sab_black</item>
    </style>

    <style name="Text.H3">
        <item name="android:textSize">@dimen/text_h3</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/sab_black</item>
    </style>

    <style name="Text.H3.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.H3.Large">
        <item name="android:textSize">@dimen/text_h3_large</item>
    </style>

    <style name="Text.H4">
        <item name="android:textSize">@dimen/text_h4</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/sab_black</item>
    </style>

    <style name="Text.H4.Bold">
        <item name="android:textSize">@dimen/text_h4</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sab_black</item>
    </style>

    <style name="Text.H5">
        <item name="android:textSize">@dimen/text_h5</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/sab_black</item>
    </style>

    <style name="Text.H5.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.H5.CondensedBold">
        <item name="android:textSize">@dimen/text_h5</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sab_black</item>
    </style>

    <style name="Text.H6">
        <item name="android:textSize">@dimen/text_h6</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sab_black</item>
    </style>

    <style name="Text.H6.Large">
        <item name="android:textSize">@dimen/text_h6_large</item>
    </style>

    <style name="Text.H7">
        <item name="android:textSize">@dimen/text_h7</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/sab_black</item>
    </style>

    <style name="Text.H7.Bold">
        <item name="android:textSize">@dimen/text_h7</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sab_black</item>
    </style>

    <style name="Text.H7.CondensedBold">
        <item name="android:textSize">@dimen/text_h7</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sab_black</item>
    </style>

    <style name="Text.H8">
        <item name="android:textSize">@dimen/text_h8</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/sab_black</item>
    </style>

    <style name="Text.H8.Large">
        <item name="android:textSize">@dimen/text_h8_large</item>
    </style>

    <style name="Text.DynamicLabel">
        <item name="android:textSize">@dimen/text_h7</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dynamic_color_label</item>
    </style>

    <style name="Text.DynamicField">
        <item name="android:textSize">@dimen/text_h4</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dynamic_color_field</item>
    </style>

    <style name="spinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/Text.H5</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/Text.H5</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="spinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:popupBackground">@drawable/rounded_corners_filled</item>
        <item name="android:popupElevation">8dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownWidth">match_parent</item>
    </style>

    <style name="spinnerStyle.Left">
        <item name="android:background">@drawable/spinner_left</item>
        <item name="android:popupBackground">@drawable/rounded_corners_filled_left</item>
    </style>

    <style name="spinnerStyle.Right">
        <item name="android:background">@drawable/spinner_right</item>
        <item name="android:popupBackground">@drawable/rounded_corners_filled_right</item>
    </style>

    <style name="Comment">
        <item name="android:textSize">@dimen/text_h4</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/sab_black</item>
    </style>

    <style name="Widget" />

    <style name="Widget.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/Text.H6.Large</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/abi_blue</item>
    </style>

    <style name="Widget.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textAppearance">@style/Text.H4</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="Widget.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check</item>
    </style>

    <style name="Widget.EditText.Light" parent="Widget.EditText">
        <item name="android:background">@drawable/edit_text_background_light</item>
        <item name="android:textAppearance">@style/Text.H4</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Text.AccountListLabel" parent="Text.H3">
        <item name="android:textColor">@color/category_name_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/space1</item>
    </style>

    <style name="Text.AccountListValue" parent="Text.AccountListLabel">
        <item name="android:textColor">@color/sab_black</item>
        <item name="android:padding">@dimen/space1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.AccountListNameValue" parent="Text.AccountListValue">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Text.PreferenceSubtext" parent="Text.H4">
        <item name="android:textColor">@color/sab_gray</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColor">@color/sab_black</item>
        <item name="windowNoTitle">true</item>
        <item name="spinnerStyle">@style/spinnerStyle</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
    </style>

    <style name="Text.LoanItemsTableLabel" parent="Text.H4">
        <item name="android:textColor">@color/sab_gray</item>
    </style>

    <style name="Text.SalesItemsHeader" parent="Text.H3">
        <item name="android:textColor">@color/sab_gray</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- Market programs -->

    <style name="Progress.Linear" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/progress_linear</item>
    </style>

    <style name="Progress.Circular_6dp" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/progress_circular_6dp</item>
    </style>

    <style name="Progress.Circular_10dp" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/progress_circular_10dp</item>
    </style>
    <style name="AlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>