<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sab_lighter_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/space">

        <TextView
            style="@style/Text.H5.CondensedBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="@string/startDate"
            android:textAllCaps="true" />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/space3"
            android:layout_height="match_parent" />

        <TextView
            style="@style/Text.H5.CondensedBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="@string/fecha_de_finalizacion"
            android:textAllCaps="true" />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/space2"
            android:layout_height="match_parent" />

        <TextView
            style="@style/Text.H5.CondensedBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tipo"
            android:textAllCaps="true" />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/space2"
            android:layout_height="match_parent" />

        <TextView
            style="@style/Text.H5.CondensedBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/estado"
            android:textAllCaps="true" />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/space2"
            android:layout_height="match_parent" />

        <TextView
            style="@style/Text.H5.CondensedBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/clasificacÃ­on"
            android:textAllCaps="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_small"
        android:background="@color/sab_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/space">

        <TextView
            android:id="@+id/start_date"
            style="@style/Text.H8.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:textAllCaps="true" />

        <ImageView
            android:layout_width="@dimen/space3"
            android:layout_height="wrap_content"
            android:padding="@dimen/space"
            android:src="@drawable/ic_dash" />

        <TextView
            android:id="@+id/end_date"
            style="@style/Text.H8.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:textAllCaps="true" />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/space2"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/type"
            style="@style/Text.H8.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="true" />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/space2"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/status"
            style="@style/Text.H8.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="true" />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/space2"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/classification"
            style="@style/Text.H8.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textAllCaps="true" />

    </LinearLayout>

</merge>