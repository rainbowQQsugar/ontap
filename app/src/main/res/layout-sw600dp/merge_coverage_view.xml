<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <TextView
        android:id="@+id/coverage_label"
        style="@style/Text.H3.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/section_title_margin"
        android:layout_marginLeft="@dimen/section_margin_horizontal"
        android:layout_marginRight="@dimen/section_margin_horizontal"
        android:layout_marginTop="@dimen/section_margin_top"
        android:text="@string/coverage"/>

    <com.abinbev.dsa.ui.customviews.ExpandedGridView
        android:id="@+id/coverage_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/coverage_label"
        android:layout_marginBottom="-10dp"
        android:layout_marginTop="-10dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"/>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="@dimen/section_margin_bottom"
        android:layout_below="@id/coverage_list"/>

</merge>