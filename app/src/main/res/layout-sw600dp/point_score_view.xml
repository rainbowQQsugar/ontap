<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/left_Layout"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="@color/sab_lightest_gray"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/space">
            <TextView
                style="@style/Text.H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/inversion_total"
                android:layout_marginLeft="@dimen/space"/>
            <TextView
                android:id="@+id/inversion_total"
                style="@style/Text.H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                tools:text="104000"
                android:layout_margin="@dimen/space2"/>
        </LinearLayout>
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/right_Layout"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="@color/sab_lightest_gray"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/lower_limit"
                    style="@style/Text.H4"
                    tools:text="140"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingRight="150dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/upper_limit"
                    style="@style/Text.H4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="230"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="150dp"
                    android:layout_marginTop="15dp"/>
            </RelativeLayout>

            <com.abinbev.dsa.ui.view.PointMeter
                android:id="@+id/points_meter"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="75dp"/>

            <TextView
                android:id="@+id/pesos"
                style="@style/Text.H4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scoreview_pesos"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space2"/>

        </LinearLayout>
    </LinearLayout>


