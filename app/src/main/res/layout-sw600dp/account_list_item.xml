<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="11dp"
    android:paddingLeft="@dimen/page_inset_horizontal"
    android:paddingRight="@dimen/page_inset_horizontal"
    android:paddingTop="11dp">

    <TextView
        android:id="@+id/txt_name"
        style="@style/Text.H5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:paddingRight="8dp"
        android:textColor="@color/abi_blue"
        tools:text="name"/>

    <TextView
        android:id="@+id/txt_address"
        style="@style/Text.H5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:paddingRight="8dp"
        android:minLines="2"
        android:textColor="@color/sab_dark_gray"
        tools:text="Really long address of some sort"/>

    <TextView
        android:id="@+id/txt_status"
        style="@style/Text.H5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:paddingRight="8dp"
        android:textColor="@color/sab_dark_gray"
        tools:text="status"/>

    <TextView
        android:id="@+id/txt_owner"
        style="@style/Text.H5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:textColor="@color/sab_dark_gray"
        tools:text="owner"/>
</LinearLayout>