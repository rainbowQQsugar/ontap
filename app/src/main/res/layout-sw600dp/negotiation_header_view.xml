<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:divider="@drawable/divider_horizontal"
    android:showDividers="middle"
    android:background="@color/sab_white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sab_white">

        <TextView
            android:id="@+id/start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/space2"
            android:layout_marginBottom="@dimen/space2"
            android:layout_marginLeft="@dimen/space2"
            android:layout_marginRight="@dimen/space"
            android:background="@drawable/date_outline"
            android:drawableEnd="@drawable/ic_date"
            android:drawablePadding="@dimen/space"
            android:hint="@string/start"
            android:padding="@dimen/space" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_dash" />

        <TextView
            android:id="@+id/end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/space2"
            android:layout_marginBottom="@dimen/space2"
            android:layout_marginRight="@dimen/space2"
            android:layout_marginLeft="@dimen/space"
            android:background="@drawable/date_outline"
            android:drawableEnd="@drawable/ic_date"
            android:drawablePadding="@dimen/space"
            android:hint="@string/end"
            android:padding="@dimen/space" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@drawable/divider_vertical" />

        <TextView
            android:id="@+id/submit"
            style="@style/Text.Action"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/space"
            android:text="@string/negotitation_save" />


        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@drawable/divider_vertical" />

        <TextView
            android:id="@+id/order"
            style="@style/Text.Action"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/space"
            android:text="@string/negotiation_save_create_order" />


    </LinearLayout>

