<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/category_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <!--     android:background="#f9f9f9"> -->

    <ImageView
        android:id="@+id/categoryBackground"
        android:layout_width="@dimen/visual_browser_listview_image_size"
        android:layout_height="@dimen/visual_browser_listview_image_size"
        android:contentDescription="@string/image_contentDescription"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/categoryName"
        style="@android:style/TextAppearance.Small"
        android:layout_width="@dimen/visual_browser_listview_image_size"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryBackground"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:alpha="100"
        android:gravity="left"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/category_list_item_name_color"/>

</RelativeLayout>